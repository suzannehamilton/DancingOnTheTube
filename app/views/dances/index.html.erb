<h1>Dances</h1>

<%= link_to 'New dance', new_dance_path %>

<% @dances.each do |dance| %>
  <ul>
    <li>
      <%= dance.name %> <%= link_to 'Edit', edit_dance_path(dance) %> <%= link_to 'Delete', dance_path(dance), method: :delete, data: { confirm: 'Are you sure?' } %>
    </li>
  </ul>
<% end %>