<%= form_for event, url: url do |f| %>
  <p>
    <%= f.label :name %>
    <%= f.text_field :name %>
  </p>

  <div class="form-group">
    <%= f.label :location %><br>
    <%= f.select :location_id, event.organisation.locations.collect {|x| [x.name, x.id]}, {} %>
  </div>

  <%= f.fields_for :weekly_recurrence do |r| %>
    <h2>Weekly recurrence</h2>
    <p>
      <%= r.select :day_of_week, days_of_week.each_with_index.map { |d,i| [d, i] }, {prompt: 'Select day of week'}%>
    </p>
  <% end %>

  <p>
    <%= f.submit %>
  </p>
<% end %>