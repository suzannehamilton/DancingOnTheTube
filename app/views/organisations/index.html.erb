<h1>Organisations</h1>

<%= link_to 'New organisation', new_organisation_path %>

<ul>
  <% @organisations.each do |organisation| %>
    <li>
      <%= organisation.name %> <%= link_to 'Edit', edit_organisation_path(organisation) %> <%= link_to 'Delete', organisation_path(organisation), method: :delete, data: { confirm: 'Are you sure?' } %>
    </li>
  <% end %>
</ul>